version: '3.8'

services:
  vaultwarden:
    image: {{ vaultwarden_image }}
    container_name: {{ container_name }}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.vaultwarden.rule=Host(`{{ subdomain }}.{{ cluster_domain }}`)"
      - "traefik.http.routers.vaultwarden.entrypoints=websecure"
      - "traefik.http.routers.vaultwarden.tls.certresolver=letsencrypt"
    restart: unless-stopped
    environment:
      - DOMAIN=https://{{ subdomain }}.{{ cluster_domain }}
      - ENABLE_WEBSOCKET=true
      - SIGNUPS_ALLOWED={{ signups_allowed | string | lower }}
      - SIGNUPS_VERIFY={{ signups_verify | string | lower }}
      - INVITATIONS_ALLOWED={{ invitations_allowed | string | lower }}
      - ADMIN_TOKEN=${ADMIN_TOKEN}
      - SMTP_HOST={{ mail_destination_ip }}
      - SMTP_PORT={{ mail_smtp_port }}
      - SMTP_SECURITY=off
      - SMTP_USERNAME={{ mail_smtp_admin_user }}
      - SMTP_PASSWORD={{ mail_smtp_admin_password }}
      - SMTP_FROM=no-reply@{{ cluster_domain }}
      - SMTP_FROM_NAME=Vaultwarden
    volumes:
{% for volume in volumes %}
      - "{{ volume.src }}:{{ volume.dst }}"
{% endfor %}
    ports:
{% for port in ports %}
      - "{{ port.ext }}:{{ port.int }}"
{% endfor %}
    networks:
      - frontend

networks:
  frontend:
    external: true