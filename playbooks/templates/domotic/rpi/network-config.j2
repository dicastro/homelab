network:
  version: 2
  ethernets:
    eth0:
      dhcp4: false
      addresses: [ {{ hostvars['domoticrpi-eth'].ansible_host }}/24 ]
      nameservers:
        addresses: [8.8.8.8, 1.1.1.1]
      routes:
        - to: 0.0.0.0/0
          via: {{ gateway_ip }}
          metric: 100
  wifis:
    wlan0:
      dhcp4: false
      addresses: [ {{ hostvars['domoticrpi-wlan'].ansible_host }}/24 ]
      nameservers:
        addresses: [8.8.8.8, 1.1.1.1]
      access-points:
        {{ wifi_ssid }}:
          password: "{{ wifi_password }}"
      routes:
        - to: 0.0.0.0/0
          via: {{ gateway_ip }}
          metric: 200
